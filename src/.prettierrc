{
  "plugins": ["prettier-plugin-blade", "prettier-plugin-tailwindcss"],
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "parser": "blade",
        "printWidth": 160
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "printWidth": 160
      }
    }
  ]
}
